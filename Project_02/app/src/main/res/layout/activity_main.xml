<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movies_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        tools:text="@string/error_loading_movies_message"
        android:id="@+id/tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:text="@string/error_loading_movies_message"
        android:textSize="@dimen/text_sz_large"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="@dimen/loading_indicator_size"
        android:layout_width="@dimen/loading_indicator_size"
        android:layout_gravity="center"
        android:visibility="invisible" />
</FrameLayout>